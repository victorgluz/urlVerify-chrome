{
  "manifest_version": 3,
  "name": "URL Verify",
  "version": "0.7.2",
  "description": "Prevent phishing with urlVerify",
  "author": "Victor Gon√ßalves da Luz",
  "homepage_url": "https://www.urlverify.com.br",

  "permissions": [
    "notifications",
    "tabs",
    "storage",
    "activeTab"
  ],

  "host_permissions": [
    "https://www.urlverify.com.br/*"
  ], 

  "action": {
    "default_icon": {
      "16": "img/icon16.png",
      "24": "img/icon24.png",
      "32": "img/icon32.png",
      "64": "img/icon64.png"
    },
    "default_title": "URL Verify",
    "default_popup": "index.html"
  },

  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "128": "img/icon128.png"
  },

  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": ["<all_urls>"],
      "js": ["urlVerify.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["urlVerify.js"],
      "matches": ["<all_urls>"]
    }
  ]
}