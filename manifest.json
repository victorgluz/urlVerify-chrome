{
  "manifest_version": 3,
  "name": "URL Verify",
  "version": "0.7.1",
  "description": "Prevent phishing with urlVerify",
  "author": "Victor Gon√ßalves da Luz",
  "homepage_url": "https://www.urlverify.com.br",

  "permissions": [
    "notifications",
    "tabs",
    "storage",
    "activeTab",
    "content_scripts"
  ],

  "action": {
    "default_icon": {
      "16": "img/icon16.png",
      "24": "img/icon24.png",
      "32": "img/icon32.png",
      "64": "img/icon64.png"
    },
    "default_title": "URL Lockup",
    "default_popup": "index.html"
  },

  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "128": "img/icon128.png"
  },

  "background": {
    "service_worker": "background.js", "type": "module"
  },

  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": ["<all_urls>"],
      "js": ["blacklist.js"]
    }
  ]
}